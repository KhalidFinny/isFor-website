<?php
if (session_status() == PHP_SESSION_NONE) {
    session_start();
}
if (!isset($_SESSION['user_id'])) {
    header('Location: /isFor-website/public/index.php?page=login');  // Redirect ke login jika belum login
    exit();
}
?>

<!-- Konten Dashboard Anda -->
<h1>Welcome to the Dashboard, <?php echo htmlspecialchars($_SESSION['username']); ?>!</h1>
<br><a href="/isFor-website/php/public/index.php?page=logout">Logout</a>
