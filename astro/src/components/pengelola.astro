            />
            <div class="absolute bottom-0 inset-x-0 bg-gray-800 dark:bg-white p-6 transition-all duration-300 group-hover:translate-y-0 group-hover:opacity-100 translate-y-24 opacity-0">
              <h4 class="text-lg font-semibold text-white dark:text-gray-800 text-center">
                {name}
              </h4>
              <span class="block text-sm text-gray-400 text-center">
                {role}
              </span>
              <p class="mt-2 text-sm text-gray-300 dark:text-gray-600 text-center">
