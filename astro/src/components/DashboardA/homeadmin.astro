---
import Sidebar from "../DashboardA/sidebar.astro";
import Layout from "../DashboardA/admindashboard.astro";
---

<Layout>
  <Sidebar slot="sidebar" />
  <div class="p-8 bg-white">
    <!-- Status Overview Cards -->
    <h2 class="text-2xl font-semibold text-purple-900 mb-6">Dashboard Overview</h2>
    <div class="grid grid-cols-2 gap-6">
      <!-- Surat Status Card -->
      <div class="bg-white/70 backdrop-blur-sm rounded-xl shadow-lg border border-purple-200 hover:shadow-xl transition-shadow">
        <div class="p-6">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-semibold text-purple-800">Surat Pengajuan</h3>
            <span class="p-2 bg-purple-200 rounded-lg text-purple-700">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </span>
          </div>
          <div class="space-y-4">
            <div class="flex items-center justify-between bg-green-100 p-4 rounded-lg border border-green-200">
              <span class="text-green-700 font-medium">Terverifikasi</span>
              <span class="text-green-700 font-bold text-lg">0</span>
            </div>
            <div class="flex items-center justify-between bg-amber-100 p-4 rounded-lg border border-amber-200">
              <span class="text-amber-700 font-medium">Belum Dibuka</span>
              <span class="text-amber-700 font-bold text-lg">0</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Gambar Status Card -->
      <div class="bg-white/70 backdrop-blur-sm rounded-xl shadow-lg border border-blue-200 hover:shadow-xl transition-shadow">
        <div class="p-6">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-semibold text-blue-800">Gambar galeri</h3>
            <span class="p-2 bg-blue-200 rounded-lg text-blue-700">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </span>
          </div>
          <div class="space-y-4">
            <div class="flex items-center justify-between bg-green-100 p-4 rounded-lg border border-green-200">
              <span class="text-green-700 font-medium">Terverifikasi</span>
              <span class="text-green-700 font-bold text-lg">0</span>
            </div>
            <div class="flex items-center justify-between bg-amber-100 p-4 rounded-lg border border-amber-200">
              <span class="text-amber-700 font-medium">Belum Dibuka</span>
              <span class="text-amber-700 font-bold text-lg">0</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
