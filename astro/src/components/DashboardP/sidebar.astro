---
const menuItems = [
  {
    title: "Home",
    href: "/peneliti_dashboard",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>`
  },
  {
    title: "Pengajuan Surat",
    href: "/suratAjuan",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>`
  },
  {
    title: "Upload Gambar",
    href: "/upload_Gambar",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>`
  }
];
---

<nav
  class="w-20 h-screen bg-white border-r border-gray-100 flex flex-col items-center py-8"
>
  <div class="space-y-4 overflow-y-auto flex-1 w-full px-2">
    {
      menuItems.map((item) => (
        <a
          href={item.href}
          class="w-full aspect-square rounded-xl flex items-center justify-center transition-all duration-200 group relative hover:bg-gray-50 hover:shadow-sm border border-transparent hover:border-gray-100"
        >
          <span
            class="text-gray-600 group-hover:text-indigo-600 transition-colors"
            set:html={item.icon}
          />
          <span class="absolute left-full ml-2 px-2 py-1 bg-gray-800 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap shadow-lg">
            {item.title}
          </span>
        </a>
      ))
    }
  </div>
</nav>
